<%- include("partials/header.ejs") %>

<% if(locals.userPosts && userPosts.length > 0) { %>
    <main id="user-posts" class="container flex items-start flex-col m-14 mx-auto max-w-screen-lg px-4 flex-grow">
        <h1 class="text-4xl font-bold italic py-4">Your posts:</h1>
        <% userPosts.forEach((posts) => { %>
            <div class="w-full max-w-2xl mb-6 border-b pb-4">
              <h2 class="font-semibold text-lg pb-2">
                <%= posts["postId"] + 1 %>. <%= posts["firstName"] %> <%= posts["lastName"] %>:
              </h2>
          
              <div class="flex justify-between items-start gap-6">
                <p class="flex-1 text-gray-700"><%= posts["text"] %></p>
          
                <div class="flex flex-col gap-2 shrink-0">
                  <form action="/edit/<%= posts["postId"] %>" method="GET">
                    <button class="text-sm text-white px-3 py-1 bg-[#88304E] hover:bg-[#722a42] rounded-3xl" type="submit">Edit</button>
                  </form>
                  <form action="/delete/<%= posts["postId"] %>" method="POST">
                    <button class="text-sm text-white px-3 py-1 bg-[#F7374F] hover:bg-[#bd3142] rounded-3xl" type="submit">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
<% } else { %>
    <main class="container flex items-center flex-col mt-15">
        <h1 class="text-4xl font-bold italic py-4">Do you have a <span class="text-[#F7374F]">story</span> to tell?</h1>
        <h2 class="font-semibold text-lg pb-4">Press the button to begin writing</h2>
        <form action="/write" method="GET">
            <button type="submit" class="rounded-4xl px-6 py-2 bg-[#312C2C] bg-font-medium text-white hover:bg-[#1f1c1c] hover:text-white">Take me there!</button>
        </form>
<% } %>

</main>


<%- include("partials/footer.ejs") %>