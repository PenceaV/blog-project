<%- include("partials/header.ejs") %>

<main class="flex justify-center items-center min-h-screen px-4">
  <div class="w-full max-w-md bg-white shadow-md rounded-xl p-6">
    <% if (locals.postEdit) { %>
      <h1 class="text-2xl font-bold mb-6 text-center">Edit Post #<%= postEdit["postId"] + 1 %></h1>
      <form action="/<%= postEdit["postId"] %>" method="POST" class="space-y-4">
        <div>
          <label for="post" class="block font-medium mb-1">Edit your post:</label>
          <textarea name="post" rows="5" class="w-full p-2 border rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">Submit</button>
      </form>
    <% } else { %>
      <h1 class="text-2xl font-bold mb-6 text-center">Create a Post</h1>
      <form action="/" method="POST" class="space-y-4">
        <div>
          <label for="fName" class="block font-medium mb-1">First Name:</label>
          <input type="text" name="fName" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label for="lName" class="block font-medium mb-1">Last Name:</label>
          <input type="text" name="lName" class="w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
        <div>
          <label for="post" class="block font-medium mb-1">Write your post:</label>
          <textarea name="post" rows="5" class="w-full p-2 border rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <button type="submit" class="w-full bg-[#312C2C] text-white py-2 rounded-lg hover:bg-[#1f1c1c]">Submit</button>
      </form>
    <% } %>
  </div>
</main>

<%- include("partials/footer.ejs") %>
